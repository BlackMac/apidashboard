{{> header}}
{{> menu}}
<div class="container-fluid content">
    <div class="row">
        <div class="col-md-12">
        <h3>Clients</h3>
        <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Your clients</h3>
        </div>
        <div class="panel-body">
            <ul class="list-group">
            {{#clients}}
                <li class="list-group-item">
                <h4>{{name}}</h4>
                <p>
                {{description}}
                </p>
                <div class="row">
                    <div class="col-md-5">
                        <strong>Client ID:</strong> {{clientId}}<br>
                        <strong>Client Secret:</strong> {{clientSecret}}
                    </div>
                    <div class="col-md-5">
                        <strong>Redirect URIs:</strong> {{redirectUris}}<br>
                        <strong>Web Origins:</strong> {{redirectUris}}<br>
                    </div>
                    <div class="col-md-2 text-right">
                    <a class="btn btn-danger" href="/client/delete/{{clientId}}"><span class="ti-trash"></span> Delete</a>
                    </div>
                </div>
                </li>
            {{/clients}}
            {{^clients}}
            <p>
                You don't have an API Client yet. You must first create one to use the sipgate.io REST API and the sipgate.io phone.
            </p>
            {{/clients}}
            </ul>
        </div>
        <div class="panel-footer">
            API Calls we used in this box:<br><strong>GET</strong> /v2/authorization/oauth2/clients<br><strong>DELETE</strong> /v2/authorization/oauth2/clients/[CLIENT_ID]
        </div>
        </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
        <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Create new client</h3>
        </div>
        <div class="panel-body">
            <form method="post" action="/client/add">
                <div class="form-group">
                    <label for="clientInputName">Client Name</label>
                    <input type="text" class="form-control" id="clientInputName" name="clientInputName" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for="clientInputDescription">Client Description</label>
                    <input type="text" class="form-control" id="clientInputDescription" name="clientInputDescription" placeholder="Description" required>
                </div>
                <div class="form-group">
                    <label for="clientInputRedirectUrls">Redirect URLs (comma separated)</label>
                    <textarea class="form-control" id="clientInputRedirectUrls" name="clientInputRedirectUrls" placeholder="Redirect URLs" required></textarea>
                </div>
                <div class="form-group">
                    <label for="clientInputOriginUrls">Web Origin URLs (comma separated)</label>
                    <textarea class="form-control" id="clientInputOriginUrls" name="clientInputOriginUrls" placeholder="Web Origin URLs" required></textarea>
                </div>
                <button type="submit" class="btn btn-default">Add client</button>
            </form>
        </div>
        <div class="panel-footer">
            API Calls we used in this box:<br><strong>POST</strong> /v2/authorization/oauth2/clients
        </div>
        </div>
        
        </div>
        
    </div>
</div>
{{> footer}}